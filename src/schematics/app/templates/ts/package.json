{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "sh ./.husky/prepare.sh || bash ./.husky/prepare.sh || echo 'BASH / GIT BASH NOT FOUND'",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "oxlint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migrate:up": "yarn typeorm migration:run -d ./src/core/migration/typeorm.config.ts",
    "migrate:generate": "yarn typeorm -d ./src/core/migration/typeorm.config.ts migration:generate ./src/core/migration/migration-files/migration/$npm_config_name",
    "migrate:create": "yarn typeorm migration:create ./src/core/migration/migration-files/migration/$npm_config_name",
    "migrate:down": "yarn typeorm -d ./src/core/migration/typeorm.config.ts migration:revert",
    "migrate": "typeorm migration:run -d ./dist/core/migration/typeorm.config.js"
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.11",
    "@nestjs/typeorm": "^10.0.2",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "dotenv-expand": "^11.0.6",
    "mysql2": "^3.9.1",
    "nestjs-cls": "^4.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-oxlint": "^0.2.7",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "oxlint": "^0.2.14",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./.cz-config.cjs",
      "jiraLocation": "pre-description"
    }
  }
}
